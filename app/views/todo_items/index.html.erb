<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table>
  <thead>
    <tr>
      <th>Due date</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.due_date %></td>
        <td><%= todo_item.title %></td>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<h1>Done Items</h1>
<table>
  <thead>
    <tr>
      <th>Due date</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @done_items.each do |done_item| %>
      <tr>
        <td><%= done_item.due_date %></td>
        <td><%= done_item.title %></td>
        <td><%= done_item.description %></td>
        <td><%= link_to 'Show', done_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(done_item) %></td>
        <td><%= link_to 'Destroy', done_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><i class="fa fa-check"></i></td>
      </tr>
    <% end %>
  </tbody>
</table>


